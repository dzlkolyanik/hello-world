//func


void line1()
{
	char c=151;
	for(int i=0;i<40;i++)
	cout<<c;
	cout<<endl;
}
void line2(int a,char b)
{
	
	for(int i=0;i<a;i++)
	cout<<b;
	cout<<endl;
}

void sincos(float x,float e,float &y,float &z)
{
	int i;
	double p;
	y=0;
	z=0;
	i=1;
	p=x;
	while(abs(p)>e)
	{
		y+=p;
		p*=-x*x/(2*i)/(2*i+1);
		i++;
	}
	z=0;
	p=1;
	i=1;
	while(abs(p)>e)
	{
	z+=p;
	p*=-x*x/(2*i-1)/(2*i);
	i++;
	}
}
void change(float &u,float &v)
{
	float t=u;
	u=v;
	v=t;
}
void change(int &u,int &v)
{
	int t=u;
	u=v;
	v=t;
}
void change(char &u,char &v)
{
	char t=u;
	u=v;
	v=t;
}
int sumdig(int n)
{
	int sum=0;
	while(n>0)
	{
		sum+=n%10;
		n/=10;
	}
	return sum;
}

void fun1 (float f, char ch, int i) 
{ cout<<f<<" "<<ch<<" "<<i<<endl; } 

void timeout(int hr,int mn,double xc)
{
	printf("%d:%02d:%05.2f\n",hr,mn,xc);
}
void timeout(int hr,int mn)
{
	printf("%d:%02d\n",hr,mn);
}
void timeout(int hr,double xc)
{
	printf("%d:%05.2f\n",hr,xc);
}
